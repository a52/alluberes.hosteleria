
@{
    ViewBag.Title = "Index";
}


<h3>Iniciar Sesion</h3>



@if (!HttpContext.Current.User.Identity.IsAuthenticated)
{
    <div class="card">
        <div class="card-body">


            @using (Html.BeginForm("login", "Usuario", FormMethod.Post))
            {
                <fieldset>
                    <legend>Login</legend>
                    <div class="row">
                        <div class="col-2">Usuario</div>
                        <div class="col"><input type="text" name="usuario" id="username" /></div>
                    </div>

                    <div class="row">
                        <div class="col-2">Contraseña</div>
                        <div class="col"><input type="password" name="clave" id="password" /></div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <button type="reset" class="btn btn-danger">Cancelar</button>
                            <button type="submit" class="btn btn-primary">Login</button>
                            @Html.ActionLink("Crear Usuario", "CrearUsuario", null, new { @class = "btn btn-secundary" })
                        </div>
                    </div>


                </fieldset>
            }

        </div>


    </div>
} else
{
    <div class="card">
        <div class="card-body">
            <p>Bienvenido @HttpContext.Current.User.Identity.Name</p>
            @Html.ActionLink("Cerrar sesion de usuario", "logout", "Usuario", new { @class="btn btn-secondary" } )

        </div>
    </div>

}


