
@{
    Layout = "";

}
<div class="">
    @if (HttpContext.Current.User.Identity.IsAuthenticated)
    {
        <div>
            <span>Bienvenido @HttpContext.Current.User.Identity.Name</span>
            @Html.ActionLink("Salir", "logout", "usuario")
        </div>


    }
    else
    {
        <div>
            @Html.ActionLink("Login", "index", "usuario")

        </div>
    }
</div>